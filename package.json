{
  "name": "node-scim",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Michael Nahkies",
    "email": "support@nahkies.co.nz"
  },
  "scripts": {
    "postinstall": "husky install",
    "generate": "./scripts/generate.sh",
    "lint": "biome lint --write .",
    "format": "biome check --write .",
    "build": "tsc -p ./tsconfig.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "dev": "yarn build && dotenvx run -f .env -- node ./dist/api.entrypoint.js",
    "watch:openapi": "nodemon --watch ./openapi.yaml --watch ./docs/openapi -e yaml --exec './scripts/generate.sh'",
    "watch:dev": "nodemon --watch ./src -e ts --delay 2 --exec 'yarn dev'",
    "clean:users": "dotenvx run -f .env -- tsx ./scripts/clean-users.ts",
    "ci-build": "yarn generate && yarn build",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "ci-lint": "biome ci ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@dotenvx/dotenvx": "^1.48.3",
    "@nahkies/openapi-code-generator": "^0.21.0",
    "@swc/core": "^1.13.2",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/getenv": "^1.0.3",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "peggy": "^5.0.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn biome lint --write --no-errors-on-unmatched",
      "yarn biome check --write --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": ">=20 <25"
  },
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.1",
    "@nahkies/typescript-koa-runtime": "^0.21.0",
    "base-x": "^5.0.1",
    "diod": "^3.0.0",
    "firebase-admin": "^13.4.0",
    "getenv": "^2.0.0",
    "koa": "^3.0.0",
    "koa-body": "^6.0.1",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "zod": "^3.25.67"
  }
}
