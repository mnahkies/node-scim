{
  "name": "node-scim",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Michael Nahkies",
    "email": "support@nahkies.co.nz"
  },
  "scripts": {
    "postinstall": "husky install",
    "generate": "./scripts/generate.sh",
    "lint": "biome lint --write .",
    "format": "biome check --write .",
    "build": "tsc -p ./tsconfig.json",
    "dev": "dotenvx run -f .env -- tsx ./src/api.entrypoint.ts",
    "watch:openapi": "nodemon --watch ./openapi.yaml --exec './scripts/generate.sh'",
    "clean:users": "dotenvx run -f .env -- tsx ./scripts/clean-users.ts",
    "ci-build": "yarn build",
    "ci-lint": "biome ci ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@dotenvx/dotenvx": "^1.19.0",
    "@nahkies/openapi-code-generator": "^0.14.0",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/getenv": "^1.0.3",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn biome lint --write --no-errors-on-unmatched",
      "yarn biome check --write --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": ">=20 <23"
  },
  "packageManager": "yarn@4.3.1",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@nahkies/typescript-koa-runtime": "^0.14.0",
    "firebase-admin": "^12.6.0",
    "getenv": "^1.0.0",
    "koa": "^2.15.3",
    "koa-body": "^6.0.1",
    "zod": "^3.23.8"
  }
}
